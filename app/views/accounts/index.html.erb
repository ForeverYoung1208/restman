<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table class="table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Number</th>
      <th>Bank</th>
      <th>Currency</th>
      <th>Saldo begin year</th>
      <th>Company</th>
      <th>is_default</th>
      <th>Type</th>
      <th>Term</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.number %></td>
        <td><%= account.bank.name + ' ' + account.bank.code %></td>
        <td><%= account.currency.name_int %></td>
        <td><%= account.saldo_begin_year %></td>
        <td><%= account.company.code_name %></td>
        <td><%= account.is_default %></td>
        <td><%= account.acc_type.name_ukr %></td>
        <td><%= account.term.try( :strftime, "%d.%m.%Y" ) %></td>


        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
