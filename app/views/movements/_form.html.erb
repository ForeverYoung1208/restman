<%= form_with(model: movement, local: true) do |form| %>
  <% if movement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movement.errors.count, "error") %> prohibited this movement from being saved:</h2> %>

      <ul>
      <% movement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :value %>
    <%= form.text_field :value %>
  </div>

  <div class="field">
    <%= form.label :direction %>
    <%= form.select :direction, Movement.directions.collect{|c| [c[1], c[0]]} %>    
  </div>

  <div class="field">
    <%= form.label :movement_group_id %>
    <%= form.select :movement_group_id, MovementGroup.all.collect{|mg| [mg.name, mg.id]} %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="field">
    <%= form.label :account_id %>
    <%= form.select :account_id, Account.all.collect{|acc| [acc.number, acc.id]} %>
  </div>

  <div class="field">
    <%= form.label :last_editor_id %>
    <%= form.text_field :last_editor_id %>
  </div>

  <div class="field">
    <%= form.label :day_id %>
    <%= form.text_field :day_id %>
  </div>

  <div class="field">
    <%= form.label :deleted_at %>
    <%= form.datetime_select :deleted_at %>
  </div>

  <div class="field">
    <%= form.label :log %>
    <%= form.text_area :log %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
