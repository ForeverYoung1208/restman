<p id="notice"><%= notice %></p>

<h1> Дні </h1>

<table class="table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Дата</th>
      <th>Відкритий?</th>
      <th>Коментар</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.id %></td>
        <td><%= day.date %></td>
        <td><%= yn !day.is_closed %></td>
        <td><%= day.comment %></td>
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

