<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h3 >Дні із рухом коштів:</h3>  
    </div>
    
  </div>
  <div class="row">

    <div class="col-md-10">
      <table class="table p-2">
        <thead>
          <tr>
            <th>Id</th>
            <th>Дата</th>
            <th>Відкритий?</th>
            <th>Коментар</th>
            <th>Рух</th>
          </tr>
        </thead>

        <tbody>
          <% @days.each do |day| %>
            <tr>
              <td><%= day.id %></td>
              <td><%= link_to day.date, by_date_movements_path(date: day.date) %></td>
              <td><%= yn !day.is_closed %></td>
              <td><%= day.comment %></td>
              <td><%= day.movements_list %></td>
             
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>